<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table>
  <thead>
    <tr>
      <th>Time posted</th>
      <th>Expertise</th>
      <th>Time range</th>
      <th>Ingredients</th>
      <th>Occasion</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.time_posted %></td>
        <td><%= question.expertise %></td>
        <td><%= question.time_range %></td>
        <td><%= question.ingredients %></td>
        <td><%= question.occasion %></td>
        <td><%= question.notes %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

